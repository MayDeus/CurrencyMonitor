<Window x:Name="MainPage" x:Class="CurrencyMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyMonitor"
        xmlns:vm="clr-namespace:CurrencyMonitor.ViewModels"
        mc:Ignorable="d"
        Title="{Binding Path=Title}" Height="700" Width="1000" Visibility="Visible" WindowStyle="ThreeDBorderWindow" Cursor="Arrow">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF98B1A4" Offset="0.99"/>
            <GradientStop Color="#FF39BE7B" Offset="0.013"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.Style>
        <Style/>
    </Window.Style>
    <Window.Effect>
        <DropShadowEffect/>
    </Window.Effect>
    <Grid x:Name="MainContent" Margin="0 0 0 10">
        <Button Content="-" HorizontalAlignment="Left" Height="25" Width="25" VerticalAlignment="Top" Margin="84 0 0 0" Command="{Binding Path=CloseApplicationCommand}"/>
        <Button Content="back" HorizontalAlignment="Left" Height="25" Width="25" VerticalAlignment="Top" Command="{Binding Path=GoBackButtonCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" IsEnabled="{Binding Path=GoBackButtonIsEnable}"/>
        <Button Content="-" HorizontalAlignment="Left" Height="25" Width="25" Margin="28 0 0 0" VerticalAlignment="Top" Command="{Binding Path=HomeButtonCommand}" IsEnabled="False"/>
        <Button Content="next" HorizontalAlignment="Left" Height="25" Width="25" VerticalAlignment="Top" Margin="56 0 0 0" Command="{Binding Path=GoNextButtonCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}" IsEnabled="{Binding Path=GoNextButtonIsEnable}"/>
        <TextBox Margin="100 130 10 10" Height="40" Width="400" VerticalAlignment="Top" Text="{Binding Path=SearchBarText}"/>
        <Button Content="Crypto1" Margin="10 130 370 10" Height="40" Width="40" VerticalAlignment="Top" Command="{Binding Path=SearchButtonCommand}"/>
        <ComboBox HorizontalAlignment="Right" Margin="5" VerticalAlignment="Top" Width="120"/>
        <Grid x:Name="CryptoCoins" Margin="40 200 40 40">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Content="{Binding Path=CryptoCoin1}" Grid.Row="0" Grid.Column="0" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin2}" Grid.Row="0" Grid.Column="1" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin3}" Grid.Row="0" Grid.Column="2" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin4}" Grid.Row="0" Grid.Column="3" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin5}" Grid.Row="0" Grid.Column="4" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin6}" Grid.Row="1" Grid.Column="0" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin7}" Grid.Row="1" Grid.Column="1" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin8}" Grid.Row="1" Grid.Column="2" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin9}" Grid.Row="1" Grid.Column="3" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin10}" Grid.Row="1" Grid.Column="4" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin11}" Grid.Row="2" Grid.Column="0" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin12}" Grid.Row="2" Grid.Column="1" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin13}" Grid.Row="2" Grid.Column="2" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin14}" Grid.Row="2" Grid.Column="3" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button Content="{Binding Path=CryptoCoin15}" Grid.Row="2" Grid.Column="4" Margin="10 20 10 20" Command="{Binding Path=OpenSpecificCryptoPageCommand}" CommandParameter="{Binding RelativeSource={RelativeSource Self}, Path=Content}"/>
            <Button x:Name="LoadMore" Content="Load More" Grid.Row="3" Grid.ColumnSpan="5" Margin="300 0 300 65" Command="{Binding Path=OpenMoreCryptoPageCommand}" />
        </Grid>
    </Grid>
</Window>
